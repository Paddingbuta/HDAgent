<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Archive Name Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name"
        android:textSize="14sp"
        android:textColor="#888888" />

    <EditText
        android:id="@+id/input_archive_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:inputType="textNoSuggestions"/>

    <!-- ID Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="14sp"
        android:textColor="#888888"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/input_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:inputType="textNoSuggestions"/>

    <!-- Passtoken Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Passtoken"
        android:textSize="14sp"
        android:textColor="#888888"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/input_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:inputType="textNoSuggestions|textMultiLine"/>

    <!-- ID Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCID"
        android:textSize="14sp"
        android:textColor="#888888"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/input_scid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:inputType="textNoSuggestions"/>

    <!-- Passtoken Label and Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SCToken"
        android:textSize="14sp"
        android:textColor="#888888"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/input_sctoken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:inputType="textNoSuggestions|textMultiLine"/>


</LinearLayout>
